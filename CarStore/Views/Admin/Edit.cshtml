@model Car

@{ 
    ViewBag.Title = "Edit";
    Layout = "_AdminLayout";
}

<h1>Edit @Model.Name</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CarId" />
    <div class="form-text">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-text">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-text">
        <label asp-for="Category"></label>
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="form-text">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-text">
        <label asp-for="ImageURL"></label>
        <div><span asp-validation-for="ImageURL" class="text-danger"></span></div>
        <input asp-for="ImageURL" class="form-control" />
    </div>
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>