@model IEnumerable<Car>

@{ 
    ViewBag.Title = "All Cars";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-end">ID</th>
        <th>Name</th>
        <th class="text-end">Price</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var car in Model)
    {
        <tr>
            <td class="text-end">@car.CarId</td>
            <td>@car.Name</td>
            <td class="text-end">@car.Price.ToString("c", new System.Globalization.CultureInfo("de-DE"))</td>
            <td class="text-center" width="150">
                    <form method="get" style="float:left">
                        <button asp-controller="Admin" asp-action="Edit" name="carId" value="@car.CarId" class="btn btn-sm btn-secondary">
                            Edit
                        </button>
                    </form>
                    <form method="post" style="float:right">
                        <button asp-controller="Admin" asp-action="Delete" name="carId" value="@car.CarId" type="submit" class="btn btn-sm btn-danger">
                            Remove
                        </button>
                    </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Add" class="btn btn-primary">Add</a>
</div>