@model Car

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-gradient p-1">
        <h4>
            @Model.Name
            <span class="badge nav-pills bg-dark" style="float:right">
                <small>@Model.Price.ToString("c", new System.Globalization.CultureInfo("de-DE"))</small>
            </span>
        </h4>
        @if (@Model.ImageURL is null)
        {
            <img src="img/no_photo.png" height="300" />
        }
        else
        {
            <img src="@Model.ImageURL" height="300" />
        }
    </div>
    <form id="@Model.CarId" asp-action="AddToCart" asp-controller="Cart" method="post">
        <input type="hidden" asp-for="CarId" />
        <input type="hidden" name="Url" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            @Model.Description
            <button type="submit" class="btn btn-success btn-sm" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>
</div>